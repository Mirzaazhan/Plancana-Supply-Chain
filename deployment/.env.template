# ============================================
# Agricultural Supply Chain - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Server Configuration
SERVER_IP=YOUR_UPCLOUD_SERVER_IP

# Database Configuration
DB_PASSWORD=your_secure_database_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# ArcGIS Configuration (copy from your existing .env)
ARCGIS_API_KEY=your_arcgis_api_key
ARCGIS_CLIENT_ID=your_arcgis_client_id
ARCGIS_CLIENT_SECRET=your_arcgis_client_secret

# OpenWeather API
OPENWEATHER_API_KEY=your_openweather_api_key

# OpenRouteService API
ORS_API_KEY=your_ors_api_key

# Gmail Configuration (for email notifications)
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password
